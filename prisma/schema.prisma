generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model events {
  id               Int      @id @default(autoincrement())
  name             String
  car_restriction  String
  length           String
  type             String
  image            String
  races            races[]

  @@map("series")
}


model races {
  id                      Int      @id @default(autoincrement())
  laps                    Int
  circuit                 String
  circuit_configuration   String
  series_id               Int
  image                   String
  Series                  events    @relation(fields: [series_id], references: [id])

  @@map("races")
}
